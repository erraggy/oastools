{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/format-go.sh \"${file_path}\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/check-branch.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "// ═══════════════════════════════════════════════════════════════════════════",
      "// MAKEFILE TARGETS - All targets from the project Makefile",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(make:*)",
      "Bash(make build:*)",
      "Bash(make install:*)",
      "Bash(make run:*)",
      "Bash(make clean:*)",
      "Bash(make test:*)",
      "Bash(make test-quick:*)",
      "Bash(make test-race:*)",
      "Bash(make test-full:*)",
      "Bash(make test-coverage:*)",
      "Bash(make test-fuzz-parse:*)",
      "Bash(make count-tests:*)",
      "Bash(make count-benchmarks:*)",
      "Bash(make lint:*)",
      "Bash(make fmt:*)",
      "Bash(make vet:*)",
      "Bash(make check:*)",
      "Bash(make deps:*)",
      "Bash(make tidy:*)",
      "Bash(make bench:*)",
      "Bash(make bench-*:*)",
      "Bash(make corpus-*:*)",
      "Bash(make test-corpus:*)",
      "Bash(make release-test:*)",
      "Bash(make release-clean:*)",
      "Bash(make docs-*:*)",
      "Bash(make help:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// GO TOOLCHAIN - All standard Go commands",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(go build:*)",
      "Bash(go run:*)",
      "Bash(go test:*)",
      "Bash(go fmt:*)",
      "Bash(go vet:*)",
      "Bash(go mod tidy:*)",
      "Bash(go mod download:*)",
      "Bash(go mod graph:*)",
      "Bash(go get:*)",
      "Bash(go install:*)",
      "Bash(go generate:*)",
      "Bash(go doc:*)",
      "Bash(go list:*)",
      "Bash(go version:*)",
      "Bash(go help:*)",
      "Bash(go clean:*)",
      "Bash(go tool cover:*)",
      "Bash(go tool pprof:*)",
      "Bash(gofmt:*)",
      "Bash(goimports:*)",
      "Bash(~/go/bin/goimports:*)",
      "Bash(golangci-lint:*)",
      "Bash(staticcheck:*)",
      "Bash(govulncheck:*)",
      "Bash(benchstat:*)",
      "Bash(gotestsum:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// GIT - Safe read/write operations (no destructive commands)",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(git status:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git rev-parse:*)",
      "Bash(git describe:*)",
      "Bash(git ls-tree:*)",
      "Bash(git ls-files:*)",
      "Bash(git cat-file:*)",
      "Bash(git symbolic-ref:*)",
      "Bash(git merge-base:*)",
      "Bash(git remote:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git tag:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(git restore:*)",
      "Bash(git worktree:*)",
      "Bash(git clone:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// GITHUB CLI - PR, issue, release, and workflow management",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh release:*)",
      "Bash(gh run:*)",
      "Bash(gh workflow:*)",
      "Bash(gh repo:*)",
      "Bash(gh api:*)",
      "Bash(gh auth status:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// PROJECT BINARIES & SCRIPTS",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(./bin/oastools:*)",
      "Bash(./scripts/*.sh:*)",
      "Bash(.claude/scripts/*.sh:*)",
      "Bash(oastools:*)",
      "Bash(goreleaser:*)",
      "Bash(mkdocs:*)",
      "Bash(curl:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// COMMON UTILITIES - Read-only inspection tools",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(jq:*)",
      "Bash(du:*)",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// GOPLS MCP SERVER - Language intelligence for Go",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "mcp__gopls-mcp__go_workspace",
      "mcp__gopls-mcp__go_diagnostics",
      "mcp__gopls-mcp__go_package_api",
      "mcp__gopls-mcp__go_file_context",
      "mcp__gopls-mcp__go_search",
      "mcp__gopls-mcp__go_symbol_references",

      "// ═══════════════════════════════════════════════════════════════════════════",
      "// WEB ACCESS - Documentation and reference sites",
      "// ═══════════════════════════════════════════════════════════════════════════",
      "WebFetch(domain:spec.openapis.org)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:docs.github.com)",
      "WebSearch"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true
}
